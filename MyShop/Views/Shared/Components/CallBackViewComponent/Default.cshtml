<section class="callback" >
	<div class="container">
		<div class="callback__title title">Ունե՞ք հարցեր: Կապնվեք մեզ հետ</div>
		<div class="call__wrapper">
			<form asp-area="" asp-controller="Customer" asp-action="Add" id="callback">
				<input type="hidden" asp-for="Id"/>
				<div class="floating-label-input">
					<input asp-for="Name" type="text"
						   class="form__input"
						   required />
					<label class="label">Անուն</label>
				</div>
				<div class="floating-label-input">
					<input asp-for="PhoneNumber" type="text"
						   class="form__input"
						   required />
					<label class="label">Հեռախոսահամար</label>
				</div>
				<div class="floating-label-input">
					<textarea asp-for="Message"
							  class="form__input"
							  required></textarea>
					<label class="label">Հաղորդագրություն</label>
				</div>
				<label class="captcha-label">
					<span class="captcha-text">Captcha</span>
					<img src="/captcha" class="captcha-img" />
					<input asp-for="Captcha" type="text" placeholder="1234" required maxlength="4" />
					<span class="captcha-error" id="captchaerror"></span>

				</label>
				<button type="submit" class="btn-green">Ուղարկել</button>
			</form>
		</div>
	</div>
</section>