<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyShop.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  border-bottom box-shadow mb-3">
            <div class="container-fluid">
              @*  <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>*@
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 nav_height">
                        <li class="nav-item">
                            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MyShop</a>
                        </li>
                        <li class="nav-item">
                            <a style="text-align:right" class="nav-link text-dark" asp-area="" asp-controller="Category" asp-action="Index">Category</a>
                        </li>
                        <li class="nav-item">
                            <a style="text-align:right" class="nav-link text-dark" asp-area="" asp-controller="Order" asp-action="Create">Cart</a>
                        </li>
                        <li>
                            <form asp-area="" asp-controller="Home" asp-action="Search" method="post" >
                                <input type="search" name="keyword" id="search" placeholder="ex. Ipxone x" />
                                <div id="result" class="tag-results hidden"></div>
                                <div id="loading" class="hidden"><i class="fas fa-spinner fa-spin"></i></div>
                                <i id="search-icon" class="search-icon fa-solid fa-magnifying-glass"></i>
                            </form>
                        </li>
                        <li class="basket-li">
                            <a asp-area="" asp-controller="Order" asp-action="Create">
                                <img src="~/img/cart1.png" />
                            <p>@await Component.InvokeAsync("BasketCountViewComponent")</p>
                            </a>
                        </li>
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <section class="call bg">@await Component.InvokeAsync("CallBackViewComponent")</section>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - MyShop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/search.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
